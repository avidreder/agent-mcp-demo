# EVM wallet private key (with or without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Anthropic API key for the AI agent
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP server URL (optional, defaults to http://localhost:8080/mcp)
MCP_SERVER_URL=http://localhost:8080/mcp

# Goal for the agent to accomplish
AGENT_GOAL=Find available APIs and resources

# Enable debug mode for x402-mcp client (shows all interceptor actions)
DEBUG=false
